@model MVCStore.Data.Entities.Customer

<div class="row">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Customer
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        @using (@Html.BeginForm("Add", "Customer", FormMethod.Post, new {id = "formregister"}))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.ValidationMessage("result")
                            <div class="form-group">
                                <label>Username</label>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", maxlength = 30 })
                                @Html.ValidationMessageFor(model => model.Username)
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                @Html.PasswordFor(m => m.Password, new {@class = "form-control", maxlength = 64 })
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", maxlength = 64 })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(m => m.Email, new {@class = "form-control", maxlength = 128 })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="form-group">
                                <label>Security Question</label>
                                @Html.TextBoxFor(m => m.Question, new {@class = "form-control", maxlength = 30 })
                                @Html.ValidationMessageFor(model => model.Question)
                            </div>
                            <div class="form-group">
                                <label>Security Answer</label>
                                @Html.TextBoxFor(m => m.Answer, new {@class = "form-control", maxlength = 30 })
                                @Html.ValidationMessageFor(model => model.Answer)
                            </div>
                            <button type="submit" class="btn btn-default">Submit</button>
                            <button type="reset" class="btn btn-primary">Reset</button>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- End Form Elements -->
    </div>
</div>
