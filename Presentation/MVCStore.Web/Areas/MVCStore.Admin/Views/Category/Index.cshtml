@{
    ViewBag.Title = "Category List";
    Layout = "~/Areas/MVCStore.Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="row" id="displayNode">
    <div class="col-md-9 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Category List
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="categoryList">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: pageData()">
                            <tr>
                                <td data-bind="text: ID"></td>
                                <td data-bind="text: Name"></td>
                                <td data-bind="text: Description"></td>

                                <td>
                                    <button data-bind="click: $root.edit" class="btn btn-default">Edit</button>
                                    <button data-bind="click: $root.delete" class="btn btn-default">Delete</button>

                                </td>

                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Page Size               
                                    <select id="rowsPerPage">
                                        <option value="5" selected="selected">5</option>
                                        <option value="10">10</option>
                                        <option value="15">15</option>
                                        <option value="20">20</option>
                                    </select>
                                </th>
                                <td>
                                    <div style="float: left;">
                                        <button class="btn btn-link" id="prevPageButton">Previous</button>
                                    </div>
                                    <div style="float: left">
                                        <button class="btn btn-link" id="nextPageButton">Next</button>
                                    </div>
                                </td>
                                <td colspan="3"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" data-bind="if: Category()">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit Category
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="ID" data-bind="visible: false">ID</label>
                            <label data-bind="text: Category().Id, visible: false"></label>
                        </div>
                        <div class="form-group" data-bind="css: { error: Category().Name.hasError }">
                            <label>Category Name</label>
                            <input type="text" data-bind='value: Category().Name, valueUpdate: "afterkeydown"' class="form-control" maxlength="64" />
                            <span data-bind='visible: Category().Name.hasError, text: Category().Name.validationMessage'> </span>
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" data-bind="value: Category().Description" maxlength="256"></textarea>
                        </div>
                        <button type="button" data-bind="click: $root.update" class="btn btn-default">Update</button>
                        <button type="reset" class="btn btn-primary">Reset</button>

                    </div>
                </div>
            </div>
        </div>
        <!-- End Form Elements -->
    </div>
</div>

<div class="row" data-bind="ifnot: Category()">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Category
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Category Name</label>
                            <input type="text" data-bind="value: $root.Name" class="form-control" maxlength="64" />
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" data-bind="value: $root.Description" maxlength="256"></textarea>
                        </div>
                        <button type="button" data-bind="click: $root.addCategory" class="btn btn-default">Submit</button>
                        <button type="reset" class="btn btn-primary">Reset</button>

                    </div>
                </div>
            </div>
        </div>
        <!-- End Form Elements -->
    </div>
</div>
