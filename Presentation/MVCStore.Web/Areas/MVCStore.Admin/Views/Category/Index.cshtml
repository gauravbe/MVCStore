@model MVCStore.Data.Entities.Category

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/MVCStore.Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Manage Categories
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        @using (@Html.BeginForm("Add", "Category", FormMethod.Post, new {id = "formregister"}))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()
                            <div class="form-group">
                                <label>Category Name</label>
                                @Html.TextBoxFor(m => m.Name, new { maxlength = 64 })
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                @Html.TextAreaFor(m => m.Description, new {maxlength = 256 })
                            </div>
                            <button type="submit" class="btn btn-default">Submit Button</button>
                            <button type="reset" class="btn btn-primary">Reset Button</button>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- End Form Elements -->
    </div>
</div>
